{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "globals": ["Liveblocks", "D1Database", "KVNamespace"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noConsole": "off"
      },
      "nursery": {
        "useSortedClasses": "off",
        "noExportedImports": "off",
        "noNestedTernary": "off"
      },
      "style": {
        "useBlockStatements": "off",
        "useConsistentBuiltinInstantiation": "off"
      }
    }
  },
  "files": {
    "ignore": [
      "packages/design-system/components/ui/**",
      "packages/design-system/lib/**",
      "packages/design-system/hooks/**",
      "packages/collaboration/config.ts",
      "apps/docs/**/*.json",
      "apps/email/.react-email/**"
    ]
  }
}
